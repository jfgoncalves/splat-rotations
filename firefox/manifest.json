{

    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "1.4.1",
    "default_locale": "en",
    "homepage_url": "https://github.com/jfgoncalves/splat-rotations",

    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },

    "permissions": [
        "*://splatoon.ink/*"
    ],

    "browser_action": {
        "default_icon": "icons/icon48.png",
        "default_title": "__MSG_extensionName__",
        "default_popup": "popup.html"
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }

}
